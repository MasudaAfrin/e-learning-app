<%= form_with(model: course, local: true) do |form| %>
  <div class="card">
    <div class="card-body">

      <div class="mb-3">
        <%= form.label :title, { class: "form-label"} %>
        <%= form.text_field :title, { class: "form-control", placeholder: "Course title" } %>
      </div>

      <div class="mb-3">
        <%= form.label :subject, { class: "formo-label"} %>
        <%= form.text_field :subject, { class: "form-control", placeholder: "Subject" } %>
      </div>

      <div class="mb-3">
        <%= form.label :description, { class: "form-label"} %>
        <%= form.text_area :description, { class: "form-control", placeholder: "Description" } %>
      </div>

      <%= form.submit "Submit", class: "btn btn-primary" %>

    </div>
  </div>
<% end %>
